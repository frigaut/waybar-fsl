#!/usr/bin/env bash

text=`cat /tmp/bg.txt | jq -r .text`
class=`cat /tmp/bg.txt | jq -r .class`
date=`cat /tmp/bg.txt | jq .date`

echo $text
echo $date
now=`date +"%s"`
echo $now

old=$((now-date))
if [ $old -gt 300 ]; then
	class="ood";
fi

echo $old
# text+=$old
echo "${text} (${old}s)"
echo "{\"text\":\"${text} (${old}s)\", \"class\":\"${class}\"}"